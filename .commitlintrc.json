{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "security"
      ]
    ],
    "scope-enum": [
      1,
      "always",
      [
        "attest",
        "convert",
        "emasser",
        "generate",
        "validate",
        "view",
        "supplement",
        "threshold",
        "ci",
        "docker",
        "deps",
        "lint",
        "test",
        "docs",
        "release"
      ]
    ],
    "subject-case": [2, "never", ["upper-case"]],
    "subject-empty": [2, "never"],
    "subject-full-stop": [2, "never", "."],
    "header-max-length": [2, "always", 100]
  }
}
