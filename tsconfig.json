{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "target": "es2024",
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
